vbell on                    # Quiet, you!
vbell_msg "Some shit happened: %s"    # Oh, fark
startup_message off         # Pointless after the first time your run it
nethack on                  # Good for a laugh sometimes
caption always '%w'           # Remind me where I am
defscrollback 1000          # Bigger better buffer
term screen-256color
bind ; source ~/.screenrc   # Reload this file

# Resize regions
bind = resize =
bind + resize +1
bind - resize -1
bind _ resize max

# # Move between regions
bind n focus down
bind e focus up
bind ^N focus down
bind ^E focus up


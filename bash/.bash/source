#!/bin/bash
source ~/.bash/distro
source ~/.bash/env
source ~/.bash/aliases
source ~/.bash/functions

# STARSHIP PROMPT
# install with `curl -sS https://starship.rs/install.sh | sh`
# or `cargo install starship`
eval "$(starship init bash)"
eval "$(starship completions bash)"

# Autocomplete pandoc options when installed
if  [ -x "$(command -v pandoc)" ]; then
  eval "$(pandoc --bash-completion)"
fi

# FZF
source $FZFDIR/key-bindings.bash
source $FZFDIR/completion.bash

# Help find command to install if not available
[[ -e /usr/share/doc/pkgfile ]] && source /usr/share/doc/pkgfile/command-not-found.bash

neofetch

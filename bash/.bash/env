#!/bin/bash

# ENVIROMENT
export EDITOR=nvim
export VISUAL=$EDITOR
export PAGER=less
export PATH=~/.local/bin:~/.cargo/bin:$PATH

export CDPATH=.:~
export HISTIGNORE="&:[ \t]*:ls:[bf]g:exit"

set -o vi
set -o noclobber
shopt -s cdspell
shopt -s histappend
shopt -s extglob
PROMPT_COMMAND='history -a'

#!/bin/bash

# COMMON APPS
export EDITOR=nvim
export VISUAL=$EDITOR
export PAGER=less

# PATHS
export PATH=~/.local/bin:~/.cargo/bin:$PATH
export CDPATH=.:~

# BASH OPTIONS
export HISTIGNORE="&:[ \t]*:ls:[bf]g:exit"
set -o vi
set -o noclobber
shopt -s autocd
shopt -s cdspell
shopt -s histappend
shopt -s extglob
PROMPT_COMMAND='history -a'
